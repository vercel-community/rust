{
  "name": "now-rust",
  "description": "Community based builder for using rust on the now/zeit platform",
  "version": "2.0.3",
  "license": "MIT",
  "main": "./dist/index",
  "homepage": "https://github.com/mike-engel/now-rust",
  "repository": {
    "type": "git",
    "url": "https://github.com/mike-engel/now-rust.git"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "tsc",
    "test": "tsc && jest",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "launcher.rs"
  ],
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@vercel/build-utils": "^2.6.0",
    "execa": "^5.0.0",
    "fs-extra": "^7.0.1",
    "vercel": "^21.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^7.0.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "ms": "^2.1.2",
    "node-fetch": "^2.6.0",
    "prettier": "^1.19.1",
    "typescript": "3.5.2"
  },
  "prettier": {
    "useTabs": true
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
